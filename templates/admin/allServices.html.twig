{% extends 'base.html.twig' %}

{% block body %}

    <div class="row d-flex justify-content-center text-center">

        <div class="row justify-content-end">
            <a href="{{ path('add_service')}}"
               class="btn btn-info col-md-2">Ajouter un Service</a>
        </div>
        <br>
        <br>

        <table class="table table-striped">

            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>

            <tbody>
            {% for service in services %}
                <tr>


                    <td>{{ service.id }}</td>
                    <td>{{ service.nom }}</td>

                    <td><a href="{{ path('delete_service', {id:service.id}) }}"
                           class="card-link btn btn-outline-primary">Supprimer</a></td>

                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}




{% block title %}

{% endblock %}

